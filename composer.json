{
  "name": "vardumper/picocss-storybook",
  "license": "MIT",
  "require": {
    "bentools/cartesian-product": "^1.4",
    "fakerphp/faker": "^1.23",
    "matthiasmullie/minify": "^1.3",
    "mnapoli/silly": "^1.9",
    "symfony/yaml": "^7.0",
    "twig/intl-extra": "^3.8"
  },
  "scripts": {
    "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
    "post-update-cmd": "vendor/bin/cghooks update",
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G",
    "phpmd": "phpmd src text ruleset.xml"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "dev-master",
    "friendsofphp/php-cs-fixer": "^3.51",
    "phpmd/phpmd": "^2.15",
    "symplify/easy-ci": "^12.1",
    "symplify/easy-coding-standard": "^12.1",
    "twig/twig": "^3.8"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.3"
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
      "veewee/composer-run-parallel": true
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        ".hooks/pre-commit"
      ],
      "commit-msg": [
        ".hooks/commit-msg"
      ],
      "post-commit": [
        ".hooks/post-commit"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "PicoCSS\\Storybook\\": "src/"
    }
  },
  "authors": [
    {
        "name": "Erik PÃ¶hler",
        "email": "info@erikpoehler.com",
        "homepage": "https://erikpoehler.com",
        "role": "Developer"
    }
  ]
}
