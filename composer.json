{
  "require": {
    "slim/psr7": "^1.6",
    "slim/slim": "^4.12",
    "twig/twig": "^3.0",
    "crazywhalecc/static-php-cli": "^2.1"
  },
  "scripts": {
    "build": [
      "rm bin/php",
      "mkdir .cache/build",
      "cd .cache/build && ../../vendor/bin/spc download --with-php=8.3 --for-extensions 'filter'",
      "cd .cache/build && ../../vendor/bin/spc build --build-cli 'filter'",
      "cd .cache/build && mv buildroot/bin/php ../../bin",
      "rm -rf .cache/build",
      "bin/php -v",
      "yarn install"
    ],
    "serve": "bin/php -q -S localhost:8008 -t public >& /dev/null"
  },
  "require-dev": {
    "veewee/composer-run-parallel": "^1.3",
    "brainmaestro/composer-git-hooks": "dev-master"
  },
  "config": {
    "allow-plugins": {
      "veewee/composer-run-parallel": true
    }
  }
}
