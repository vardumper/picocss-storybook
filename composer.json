{
  "require": {
    "slim/psr7": "^1.6",
    "slim/slim": "^4.12",
    "twig/twig": "^3.0",
    "crazywhalecc/static-php-cli": "^2.1"
  },
  "scripts": {
    "post-install-cmd": "vendor/bin/cghooks add --ignore-lock",
    "post-update-cmd": "vendor/bin/cghooks update",
    "build": [
      "Composer\\Config::disableProcessTimeout()",
      "test -f bin/php && rm bin/php || true",
      "test -d .cache/build || mkdir -p .cache/build",
      "cd .cache/build && ../../vendor/bin/spc download --with-php=8.3 --for-extensions 'filter'",
      "cd .cache/build && ../../vendor/bin/spc build --build-cli 'filter'",
      "cd .cache/build && mv buildroot/bin/php ../../bin",
      "rm -rf .cache/build",
      "bin/php -v",
      "yarn install"
    ],
    "serve": [
      "Composer\\Config::disableProcessTimeout()",
      "bin/php -q -S localhost:8008 -t public"
    ],
    "storybook": [
      "yarn storybook"
    ]
  },
  "require-dev": {
    "veewee/composer-run-parallel": "^1.3",
    "brainmaestro/composer-git-hooks": "dev-master"
  },
  "config": {
    "allow-plugins": {
      "veewee/composer-run-parallel": true
    }
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        ".hooks/pre-commit"
      ],
      "commit-msg": [
        ".hooks/commit-msg"
      ],
      "post-commit": [
        ".hooks/post-commit"
      ]
    }
  }
}
